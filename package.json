{
  "name": "blog",
  "version": "1.0.0",
  "description": "Technical blog built with Hugo",
  "type": "module",
  "scripts": {
    "lint:js": "eslint themes/app/js/**/*.js",
    "lint:css": "stylelint 'themes/app/css/**/*.css'",
    "lint": "npm run lint:js && npm run lint:css",
    "format:js": "eslint --fix themes/app/js/**/*.js",
    "format:css": "stylelint --fix 'themes/app/css/**/*.css'",
    "format": "npm run format:js && npm run format:css",
    "build:js": "node build.js",
    "build:css": "postcss themes/app/css/*.css --dir static/css/dist --map",
    "build": "npm run build:js && npm run build:css",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "vitest run --coverage"
  },
    "devDependencies": {
    "eslint": "^8.57.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "esbuild": "^0.19.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.0",
    "postcss-preset-env": "^10.0.0",
    "cssnano": "^6.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "typescript": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "jsdom": "^23.0.0",
    "@playwright/test": "^1.40.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

